@model LoginWithApi.Models.MVC.mvcUsuario    

<form action="/home/login" method="post" class="form-control-static">
    <div class="form-group">
        <p class="form-control-static text-info lead">Informe os dados para realizar o login</p>
    </div>
    <div class="form-group">
        <label>E-mail:</label>
        <input type="text" name="usuario.Email" value="@Model.Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Senha:</label>
        <input type="password" name="usuario.Senha" value="@Model.Senha" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Entrar" class="btn btn-primary btn-group" />
        @Html.ActionLink("Recuperar Senha", "LembrarSenha", "Home")
    </div>
    <div class="form-group">
        <p class="form-control-static text-danger ">@ViewBag.Mensagem</p>
    </div>
</form>
